programa
{
    funcao real dobro(real valor)
    {
        retorne valor * 2
    }

    funcao inicio()
    {
        real numero
        escreva("Digite um valor: ")
        leia(numero)

        escreva("O dobro é: ", dobro(numero), "\n")
    }
}

